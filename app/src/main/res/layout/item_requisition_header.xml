<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <TextView
                android:id="@+id/requisition_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="RequisitionNo"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Date"
                android:id="@+id/date"
                android:padding="1dp"
                android:textColor="@color/primary_text"
                android:layout_below="@id/requisition_no"
                android:layout_toLeftOf="@+id/amount"
                android:layout_toStartOf="@+id/amount"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Company Name"
                android:id="@+id/company_name"
                android:padding="1dp"
                android:textColor="@color/primary_text"
                android:layout_below="@id/date"
                android:layout_toLeftOf="@+id/amount"
                android:layout_toStartOf="@+id/amount"
                android:typeface="monospace"/>
       <!--     <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="16sp"
                android:padding="1dp"
                android:textColor="@color/primary_text"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/amount" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requisition Status"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:padding="1dp"
                android:id="@+id/status"
                android:layout_below="@+id/company_name"
                android:layout_toLeftOf="@+id/amount"
                android:layout_toStartOf="@+id/amount"/>
        </RelativeLayout>

    <com.dd.CircularProgressButton
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="end"
        android:id="@+id/approve_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:cpb_selectorIdle="@drawable/button_colors"
        app:cpb_colorIndicator="@color/colorPrimary"
        app:cpb_colorProgress="@android:color/transparent"
        app:cpb_colorIndicatorBackground="@color/cpb_grey"
        app:cpb_textComplete="Approved"
        app:cpb_textError="Error Occurred"
        app:cpb_textIdle="Approve"
        android:padding="5dp"
        app:cpb_cornerRadius="4dp"
        app:cpb_paddingProgress="5dp"
        android:layout_marginTop="8dp"/>
</LinearLayout>