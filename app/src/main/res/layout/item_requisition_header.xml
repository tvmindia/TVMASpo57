<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@drawable/delete"
                android:tint="@color/colorPrimary"
                android:id="@+id/delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:onClick="deleteRequisition"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@drawable/edit"
                android:tint="@color/colorPrimary"
                android:id="@+id/edit"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/delete"
                android:layout_toStartOf="@+id/delete" />
            <TextView
                android:id="@+id/requisition_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="RequisitionNo"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/edit"
                android:layout_toStartOf="@+id/edit" />
            <TextView
                android:id="@+id/requisition_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Requisition Title"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/requisition_no"
                android:layout_toLeftOf="@+id/edit"
                android:layout_toStartOf="@+id/edit" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Date"
                android:id="@+id/date"
                android:padding="1dp"
                android:textColor="@color/primary_text"
                android:layout_below="@id/requisition_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Company Name"
                android:id="@+id/company_name"
                android:padding="1dp"
                android:textColor="@color/primary_text"
                android:layout_below="@id/date"
                android:typeface="monospace"/>
       <!--     <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="16sp"
                android:padding="1dp"
                android:textColor="@color/primary_text"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/amount" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requisition Status"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:padding="1dp"
                android:id="@+id/status"
                android:layout_below="@+id/company_name"/>
        </RelativeLayout>
   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_label"
        android:textColor="@color/primary_text"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:id="@+id/total"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:visibility="gone"
        />-->
    <com.dd.CircularProgressButton
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="end"
        android:id="@+id/approve_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:cpb_selectorIdle="@drawable/button_colors"
        app:cpb_colorIndicator="@color/colorPrimary"
        app:cpb_colorProgress="@android:color/transparent"
        app:cpb_colorIndicatorBackground="@color/cpb_grey"
        app:cpb_textComplete="Approved"
        app:cpb_textError="Error"
        app:cpb_textIdle="Approve"
        android:padding="5dp"
        app:cpb_cornerRadius="4dp"
        app:cpb_paddingProgress="5dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>
</LinearLayout>